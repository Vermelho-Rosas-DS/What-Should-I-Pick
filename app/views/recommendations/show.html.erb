<div class="container-fluid my-0 p-0 bg-indigo-900" style="background-image: url(<%= image_url 'vayne.jpg' %>); background-repeat: no-repeat; background-attachment: fixed; background-size: cover; background-position: center;">
    <div class="container-fluid shade-bg m-0 p-0" style="min-height: 100vh;">
        <div class="container-sm dark-card rounded-4 p-0" style="min-height: 100vh;">

            <div class="container-fluid p-0 mask-champion-img">
                <%= image_tag "http://ddragon.leagueoflegends.com/cdn/img/champion/splash/#{@champ.name_identifier}_0.jpg", alt: "", width: '100%', class: 'rounded-4' %>
            </div>
            <div class="container-sm rounded-4 text-light" style="margin-top: -90px;">
                <div class="text-center">
                    <h1 class="display-1 fw-bold"><%= @champ.name %></h1>
                </div>
                <div class="hstack gap-3 justify-content-center">
                    <div class="mx-1">
                        <span><%= t('common.win_rate') %>:</span>
                        <span class="font-monospace"><%= (@recommendation.win_rate * 100).ceil(2) %> %</span>
                        <span><%= render_win_rate_badge((@recommendation.win_rate * 100).ceil(2)) %></span>
                    </div>
                    <h4 class="fw-bold display-6"><%= @champ.title.titleize %></h4>
                    <div class="mx-1">
                        <span><%= render_pick_rate_badge((@recommendation.pick_rate * 100).ceil(2)) %></span>
                        <span><%= t('common.pick_rate') %>:</span>
                        <span class="font-monospace"><%= (@recommendation.pick_rate * 100).ceil(2) %> %</span>
                    </div>
                </div>
                <% if @recommendation.feedback_score.present? %>
                    <div class="text-center">
                        <%= @recommendation.feedback_score_is_positive? ? 'RecomendaÃ§Ã£o aprovada pelo jogador! ðŸ˜€' : 'O Jogador nÃ£o curtiu essa recomendaÃ§Ã£o ðŸ˜¥' %>
                    </div>
                <% end %>
                <div class="hstack gap-5 mx-4 my-5" style="text-align: justify;">
                    <div>
                        <h4><%= t('common.lore') %></h4>
                        <p class="fw-light"><%= @champ.lore %></p>
                    </div>
                    <% if @champ.ally_tips.present? %>
                        <div class="vr"></div>
                        <div>
                            <h4><%= t('common.official_tips') %></h4>
                            <p class="fw-light"><%= @champ.ally_tips %></p>
                        </div>
                    <% end %>
                </div>
                <% if @recommendation.feedback_score.blank? %>
                    <div class="d-flex flex-column justify-content-center align-items-center fw-light">
                        <div data-controller="recommendation-feedback">
                            <p><%= t('recommendations.feedback_form_title') %></p>
                            <div class="mb-2 text-center">
                                <a href="#" class="m-2 h2 text-decoration-none text-light fw-light" data-action="recommendation-feedback#selectScore" value="1"><i class="fa-regular fa-thumbs-up" data-recommendation-feedback-target="thumbs"></i></a>
                                <a href="#" class="m-2 h2 text-decoration-none text-light fw-light" data-action="recommendation-feedback#selectScore" value="0"><i class="fa-regular fa-thumbs-down" data-recommendation-feedback-target="thumbs"></i></a>
                            </div>
                            <%= form_with url: recommendation_path(@recommendation), method: :patch, id: 'recommendation-feedback-form' do |form| %>
                                <%= form.hidden_field :feedback_score %>
                                <label for="feedback_text" class="form-label fw-lighter small"><%= t('recommendations.additional_comments') %></label>
                                <textarea name="feedback_text" id="feedback_text" class="form-control" rows="2" placeholder="<%= t('recommendations.your_opinion_placeholder') %>"></textarea>
                                <div class="text-center my-2">
                                    <a class="btn btn-outline-success" data-action="recommendation-feedback#submitForm"><%= t('recommendations.submit_feedback') %></a>
                                </div>
                            <% end %>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>